@inject IHttpContextAccessor HttpContextAccessor;
@using Microsoft.AspNetCore.Http;
@{
    HttpContext? httpContext = HttpContextAccessor.HttpContext;
    string? uzivatel = httpContext?.Session.GetString("jmeno");
    string? jeAdmin = httpContext?.Session.GetString("jeAdmin");
}

<header id="horniHeader">
    <div class="container">
        <div>
            <a id="nazevProjektu" asp-controller="Home" asp-action="Index" title="Domovská stránka">Prváku, neztrať se!</a>
        </div>

        <nav>
            @if (uzivatel != null)
            {
                if (jeAdmin == "True")
                {
                    <div>
                        <a asp-controller="Uzivatel" asp-action="Profil">@uzivatel (Admin)</a>
                    </div>
                }
                else
                {
                    <div>
                        <a asp-controller="Uzivatel" asp-action="Profil">@uzivatel</a>
                    </div>
                }

                <div>
                    <a asp-controller="Uzivatel" asp-action="Odhlasit">Odhlásit se</a>
                </div>
            }
            else
            {
                <div>
                    <a asp-controller="Uzivatel" asp-action="Prihlaseni">Přihlásit se</a>
                </div>

                <div>
                    <a asp-controller="Uzivatel" asp-action="Registrace">Registrovat se</a>
                </div>
            }
        </nav>
    </div>
</header>

<header id="hlavniHeader">
    <div class="container">
        <a id="logo" asp-controller="Home" asp-action="Index" title="Domovská stránka">
            <img src="/ob/logo.svg" alt="">
        </a>

        <nav>
            <div>
                <a asp-controller="Home" asp-action="Index">Úvod</a>
            </div>
            <div>
                <a asp-controller="Tutorialy" asp-action="Index">Tutoriály</a>
            </div>

            <div>
                <a asp-controller="Navigace" asp-action="Budovy">Navigace</a>
                <ul>
                    <li><a asp-controller="Navigace" asp-action="Budovy">Budovy</a></li>
                    <li><a asp-controller="Navigace" asp-action="Ucebny">Učebny</a></li>
                </ul>
            </div>

            <div>
                <a asp-controller="Jidlo" asp-action="Jidelny">Jídlo</a>
                <ul>
                    <li><a asp-controller="Jidlo" asp-action="Jidelny">Jídelny</a></li>
                    <li><a asp-controller="Jidlo" asp-action="Automaty">Automaty</a></li>
                </ul>
            </div>

            <div>
                <a asp-controller="Odkazy" asp-action="Index">Odkazy</a>
                <ul>
                    <li><a asp-controller="Odkazy" asp-action="Bakalari" target="_blank">Bakaláři</a></li>
                    <li><a asp-controller="Odkazy" asp-action="Sps" target="_blank">SPŠ Trutnov</a></li>
                    <li><a asp-controller="Odkazy" asp-action="Mail" target="_blank">Mail</a></li>
                    <li><a asp-controller="Odkazy" asp-action="Github" target="_blank">GitHub</a></li>
                </ul>
            </div>

            @if (uzivatel != null)
            {
                <div>
                    <a asp-controller="Stiznosti" asp-action="NahlasitProblem">Nahlásit</a>
                </div>
            }
        </nav>
    </div>
</header>