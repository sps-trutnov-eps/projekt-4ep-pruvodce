<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prv치ku, neztra콘 se!</title>
    <link rel="icon" href="~/ob/logo.png">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

<partial name="_Nav"/>

<main>
    @if ((string)ViewData["Title"]! == "Budovy")
    {
        @RenderBody()
    }
    else
    {
        <div id="nadpis">
            <div class="container">
                <h1>@ViewData["Title"]</h1>
                @if ((string)ViewData["SubTitle"]! != "")
                {
                    <div>@ViewData["SubTitle"]</div>
                }
            </div>
        </div>
        
        @RenderBody()
    }
</main>

<footer>
    <div class="container">
        <div>&copy; 2023 - Prv치ku, neztra콘 se!</div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@if ((string)ViewData["Title"]! == "Budovy")
{
    <script async src="https://unpkg.com/es-module-shims@1.6.3/dist/es-module-shims.js"></script>
    <script type="importmap">
          {
            "imports": {
              "three": "https://unpkg.com/three@v0.149.0/build/three.module.js",
              "three/addons/": "https://unpkg.com/three@v0.149.0/examples/jsm/"
            }
          }
        </script>
    <script type="module" src="/js/budovy.js"></script>
}
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
