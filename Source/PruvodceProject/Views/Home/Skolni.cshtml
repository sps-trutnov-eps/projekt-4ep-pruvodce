@{
    ViewData["Title"] = "Skolni";
    Layout = "3Dhead";
}
<h1>@ViewData["Skolni"]</h1>

<body>
    <canvas id="bg"></canvas>

<script type="module" src="/js/skolni.js"></script>
<script>
    var t = false;
    function schovat(){
        t = !t;
        if(t){
            document.getElementById('vyber').style.display = "none";
            document.getElementById('scho').innerHTML = "Zobrazit nabídku"
        }
        else{
            document.getElementById('vyber').style.display = "grid";
            document.getElementById('scho').innerHTML = "Schovat nabídku"
        }}
</script>
</body>

<style>
    #scho{
        color: whitesmoke;
        width: 22rem;
        height: 2rem;
        background-color: crimson;
        position: absolute;
        bottom: 10px;
        left: 5px;
        border-radius: 4px;
        border-style: dashed;
    }
    html{
        overflow: hidden;
    }
    canvas{
    top: 0;
    left: 0;
    }
    body{
        margin: 0;
    }
    #vyber{
        display: hidden;
        grid-template-rows: 10% 10% 10% 10% 10% 10% auto 4%;
        position: absolute;
        text-decoration: none;
        background-color: rgba(250, 250, 250, 0.94);
        height: 100%;
        width: 23rem;
        text-align: center;
    }
    #vyber *{
        padding: 10px;
        margin-left: 4px;
        margin-left: 4px;
    }
    #vyber button{
        width: 80%;
        margin: 0 auto;
        margin-bottom: 4px;
    }
    header{
        display: block;
    }

    #panelMistnostiPrekryvaPlatno h1{
        width: 100%;
    }

    #panelMistnostiPrekryvaPlatno{
        display: none;
        grid-template-rows: 10% 10% 10% 10% 10% 10% auto 4%;
        position: absolute;
        text-decoration: none;
        background-color: rgba(250, 250, 250, 0.94);
        height: 100%;
        width: 23rem;
        text-align: center;
        right:0
    }
    #panelMistnostiPrekryvaPlatno *{
        padding: 10px;
        margin-left: 4px;
        margin-left: 4px;
    }
    #panelMistnostiPrekryvaPlatno button{
        width: 80%;
        margin: 0 auto;
        margin-bottom: 4px;
    }

</style>